---
import { getCollection } from 'astro:content';
import Base from '../layouts/Base.astro';

export async function getStaticPaths() {
  const blessings = await getCollection('blessings');
  return blessings.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Base title={entry.data.title}>
  <article>
    <div class="blessing-header">
      <h1>{entry.data.title}</h1>
      <div class="blessing-meta">
        <span>{entry.data.category}</span>
      </div>
      <p class="blessing-description-full">{entry.data.description}</p>
    </div>
    
    <div class="blessing-content">
      <Content />
    </div>
  </article>
</Base>
