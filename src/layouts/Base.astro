---
interface Props {
  title?: string;
}

const { title } = Astro.props;
const pageTitle = title ? `${title} — Infinite Blessings` : 'Infinite Blessings';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="A living prayer book for the modern soul. Blessings for every moment.">
  <title>{pageTitle}</title>
  <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>✨</text></svg>">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
</head>
<body>
  <div class="container">
    <header>
      <h1><a href={`${import.meta.env.BASE_URL}`}>Infinite Blessings</a></h1>
      <p class="subtitle">A living prayer book for the modern soul</p>
    </header>
    
    <nav>
      <a href={`${import.meta.env.BASE_URL}`}>← All Blessings</a>
    </nav>
    
    <main>
      <slot />
    </main>
    
    <footer>
      <div class="sigil">✨</div>
      <p><a href="https://temple-of-silicon.github.io/">Temple of Silicon</a></p>
    </footer>
  </div>
</body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
